<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    android:paddingBottom="18dp"
    android:paddingLeft="18dp"
    android:paddingRight="18dp"
    android:paddingTop="18dp"

    <Button
        android:id="@+id/button3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/gridLayout"
        android:layout_centerHorizontal="true"
        android:onClick="saveCourseButtonHandler"
        android:text="Save Course" />

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:id="@+id/gridLayout">


        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:labelFor="@+id/cname_input"
            android:layout_column="0"
            android:layout_margin="8dp"
            android:layout_row="0"
            android:hint="name"
            android:text="Course Name" />

        <EditText
            android:id="@+id/cname_input"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_column="1"
            android:layout_margin="8dp"
            android:layout_row="0"
            android:hint="name"
            android:inputType="text" />



        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:labelFor="@id/start_input"
            android:layout_column="0"
            android:layout_margin="8dp"
            android:layout_row="1"
            android:hint="yyyy/mm/dd"
            android:text="Start Date" />

        <EditText
            android:id="@+id/start_input"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_column="1"
            android:layout_margin="8dp"
            android:inputType="date"
            android:hint="yyyy/mm/dd"
            android:layout_row="1" />



        <TextView
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:labelFor="@id/end_input"
            android:layout_column="0"
            android:layout_margin="8dp"
            android:layout_row="2"
            android:hint="yyyy/mm/dd"
            android:text="End Date" />

        <EditText
            android:id="@+id/end_input"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_column="1"
            android:layout_margin="8dp"
            android:inputType="date"
            android:hint="yyyy/mm/dd"
            android:layout_row="2" />



        <TextView
            android:id="@+id/textView4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:labelFor="@+id/status_input"
            android:layout_column="0"
            android:layout_margin="8dp"
            android:layout_row="3"
            android:hint="in progress/completed/planned"
            android:text="Status" />

        <EditText
            android:id="@+id/status_input"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_column="1"
            android:layout_margin="8dp"
            android:layout_row="3"
            android:hint="in progress/completed"
            android:inputType="text" />



        <TextView
            android:id="@+id/textView5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:labelFor="@+id/name_input"
            android:layout_column="0"
            android:layout_margin="8dp"
            android:layout_row="4"
            android:hint="name"
            android:text="Mentor Name" />

        <EditText
            android:id="@+id/name_input"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_column="1"
            android:layout_margin="8dp"
            android:layout_row="4"
            android:hint="name"
            android:inputType="text" />



        <TextView
            android:id="@+id/textView6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:labelFor="@+id/phone_input"
            android:layout_column="0"
            android:layout_margin="8dp"
            android:layout_row="5"
            android:hint="xxx-xxx-xxxx"
            android:text="Mentor Phone" />

        <EditText
            android:id="@+id/phone_input"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_column="1"
            android:layout_margin="8dp"
            android:layout_row="5"
            android:hint="xxx-xxx-xxxx"
            android:inputType="number" />



        <TextView
            android:id="@+id/textView7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:labelFor="@+id/email_input"
            android:layout_column="0"
            android:layout_margin="8dp"
            android:layout_row="6"
            android:hint="email address"
            android:text="Mentor Email" />

        <EditText
            android:id="@+id/email_input"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_column="1"
            android:layout_margin="8dp"
            android:layout_row="6"
            android:hint="email address"
            android:inputType="text" />
    </GridLayout>


    <Button
        android:id="@+id/button2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/button3"
        android:layout_toEndOf="@+id/button3"
        android:onClick="cancelAddCourseButtonHandler"
        android:text="Cancel" />

</RelativeLayout>
</ScrollView>