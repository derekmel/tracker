<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    android:paddingBottom="18dp"
    android:paddingLeft="18dp"
    android:paddingRight="18dp"
    android:paddingTop="18dp"



    <Button
        android:id="@+id/cancel_assessment"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_marginBottom="79dp"
        android:layout_marginEnd="19dp"
        android:onClick="cancelButtonHandler"
        android:text="Cancel" />

    <Button
        android:id="@+id/save_assessment"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignTop="@+id/cancel_assessment"
        android:layout_marginEnd="121dp"
        android:onClick="saveButtonHandler"
        android:text="Save" />

    <GridLayout
        android:id="@+id/gridLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_gravity="center_vertical">


        <TextView
            android:id="@+id/name_input"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:labelFor="@+id/assessment_name"
            android:layout_column="0"
            android:layout_margin="8dp"
            android:layout_row="0"
            android:hint="name"
            android:text="Name" />

        <EditText
            android:id="@+id/assessment_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_column="1"
            android:layout_margin="8dp"
            android:layout_row="0"
            android:hint="name"
            android:inputType="text" />



        <TextView
            android:id="@+id/type_input"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="0"
            android:layout_margin="8dp"
            android:layout_row="1"
            android:labelFor="@id/assessment_type"
            android:hint="performance/objective"
            android:text="Type" />

        <EditText
            android:id="@+id/assessment_type"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_column="1"
            android:layout_margin="8dp"
            android:layout_row="1"
            android:hint="performance/objective"
            android:inputType="text" />


        <TextView
            android:id="@+id/due_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="0"
            android:layout_margin="8dp"
            android:layout_row="2"
            android:labelFor="@id/due_input"
            android:hint="yyyy/mm/dd"
            android:text="Due Date" />

        <EditText
            android:id="@+id/due_input"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_column="1"
            android:layout_margin="8dp"
            android:layout_row="2"
            android:hint="yyyy/mm/dd"
            android:inputType="text" />



        <TextView
            android:id="@+id/description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="0"
            android:layout_margin="8dp"
            android:layout_row="3"
            android:labelFor="@id/description_input"
            android:hint="short description"
            android:text="Description" />

        <EditText
            android:id="@+id/description_input"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_column="1"
            android:layout_margin="8dp"
            android:layout_row="3"
            android:hint="short description"
            android:inputType="text" />




        <TextView
            android:id="@+id/goaldate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="0"
            android:layout_margin="8dp"
            android:layout_row="4"
            android:labelFor="@id/goaldate_input"
            android:hint="yyyy/mm/dd"
            android:text="Goal Date" />

        <EditText
            android:id="@+id/goaldate_input"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_column="1"
            android:layout_margin="8dp"
            android:layout_row="4"
            android:hint="yyyy/mm/dd"
            android:inputType="text" />


    </GridLayout>



</RelativeLayout>