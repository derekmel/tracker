<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    android:paddingBottom="18dp"
    android:paddingLeft="18dp"
    android:paddingRight="18dp"
    android:paddingTop="18dp"

    <Button
        android:id="@+id/delete_term"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/edit_term"
        android:layout_marginTop="205dp"
        android:onClick="deleteButtonHandler"
        android:text="Delete" />

    <Button
        android:id="@+id/edit_term"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignTop="@+id/courses_button"
        android:layout_marginEnd="50dp"
        android:onClick="editButtonHandler"
        android:text="Edit" />

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:id="@+id/gridLayout">


        <TextView
            android:id="@+id/term_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="0"
            android:layout_margin="8dp"
            android:layout_row="0"
            android:text="Term Name" />

        <TextView
            android:id="@+id/term_start"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:labelFor="@id/start_input"
            android:layout_column="0"
            android:layout_margin="8dp"
            android:layout_row="1"
            android:text="Term Start Date" />


        <TextView
            android:id="@+id/term_end"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:labelFor="@id/end_input"
            android:layout_column="0"
            android:layout_margin="8dp"
            android:layout_row="2"
            android:text="Term End Date" />

    </GridLayout>

    <Button
        android:id="@+id/courses_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="50dp"
        android:layout_marginTop="128dp"
        android:onClick="coursesButtonHandler"
        android:text="Courses" />

</RelativeLayout>